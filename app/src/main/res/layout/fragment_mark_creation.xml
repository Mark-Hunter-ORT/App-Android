<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp">


    <ImageButton
        android:id="@+id/cameraView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/picture"
        app:srcCompat="@drawable/ic_take_picture_test" />


    <ImageButton
        android:id="@+id/confirm"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="309dp"
        android:layout_marginTop="154dp"
        android:contentDescription="@string/picture"
        app:srcCompat="@drawable/ic_baseline_check_24" />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="212dp"
        android:layout_marginTop="155dp"
        android:contentDescription="@string/picture"
        app:srcCompat="@drawable/ic_outline_cancel_24" />

    <TextView
        android:id="@+id/cameraText"
        android:layout_width="50dp"
        android:layout_height="15dp"

        android:layout_below="@+id/cameraView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="1dp"
        tools:text="@string/cameraText" />

    <EditText
        android:id="@+id/markTagEditText"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="53dp"
        android:layout_toEndOf="@+id/cameraView"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/mark_tag_hint"
        android:inputType="textPersonName"
        android:text="" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>