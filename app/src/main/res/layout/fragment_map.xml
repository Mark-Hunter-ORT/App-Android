<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="598dp"
        android:layout_toEndOf="@+id/refreshMarksIcon"
        android:text="@string/refresh_map"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="598dp"
        android:layout_toEndOf="@+id/addMarkIcon"
        android:text="@string/mark_button"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/addMarkIcon"
        android:layout_width="77dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="552dp"
        android:accessibilityHeading="true"
        android:contentDescription="@string/picture"
        android:src="@drawable/ic_markericon" />

    <ImageView
        android:id="@+id/refreshMarksIcon"
        android:layout_width="43dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="559dp"
        android:layout_toEndOf="@+id/addMarkIcon"
        android:contentDescription="@string/picture"
        android:src="@drawable/ic_baseline_refresh_24" />

</RelativeLayout>